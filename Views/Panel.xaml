<UserControl x:Class="SamplePanel.Views.Panel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SamplePanel.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Name="CardsGrid">
            <Grid.RowDefinitions>
                <RowDefinition Name="TopDisclaimer" Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock Name="DisclaimerTextBlock" Grid.Row="0" Margin="10, 5" TextWrapping="Wrap" Foreground="DimGray">
                This is a sample panel.
            </TextBlock>
        </Grid>
    </ScrollViewer>
</UserControl>
